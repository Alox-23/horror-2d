import pygame

class Dummy(pygame.sprite.Sprite):
    def init(self, pos, size):
        self.animations = self.load_animation(pygame.image.load("img/player/player1.png"), [48, 48], 6, "idle")
        self.animation_index
        self.image = self.animations["idle"][self.animation_index]
        self.rect = self.image.get_rect()
        self.rect.center = pos

    def load_animation(self, sheet, img_size, items, *animation_types):
        animations = {}
        for row in range(len(animation_types)):
            animation_list = []
            y = row*img_size[1]
            for img in range(items):
                x = img*img_size[0]
                animation_list.append(sheet.subsurface(x, y, size[0], size[1]))

            animations.[animation_types[y]] = animation_list

        return animations
